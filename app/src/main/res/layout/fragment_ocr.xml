<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:baselineAligned="false">

    <net.qiujuer.genius.ui.widget.Button
        android:text="文字识别"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/general_button"
        tools:ignore="HardcodedText"
        android:gravity="center"
        android:textColor="@color/white_alpha_224"
        android:background="@color/button_bg"
        android:padding="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"
        app:gTouchEffect="ripple"/>
    <net.qiujuer.genius.ui.widget.Button
        android:text="身份证"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idcard_button"
        tools:ignore="HardcodedText"
        android:gravity="center"
        android:textColor="@color/white_alpha_224"
        android:background="@color/button_bg"
        android:padding="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"
        app:gTouchEffect="ripple"/>

    <net.qiujuer.genius.ui.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bankcard_button"
        android:text="银行卡"
        tools:ignore="HardcodedText"
        android:gravity="center"
        android:textColor="@color/white_alpha_224"
        android:background="@color/button_bg"
        android:padding="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"
        app:gTouchEffect="ripple"/>
    <net.qiujuer.genius.ui.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speech_recognition"
        android:text="@string/speechRecognition"
        tools:ignore="HardcodedText"
        android:gravity="center"
        android:textColor="@color/white_alpha_224"
        android:background="@color/button_bg"
        android:padding="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"
        app:gTouchEffect="ripple"/>
    <net.qiujuer.genius.ui.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/voice_synthesis"
        android:text="@string/voiceSynthesis"
        tools:ignore="HardcodedText"
        android:gravity="center"
        android:textColor="@color/white_alpha_224"
        android:background="@color/button_bg"
        android:padding="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"
        app:gTouchEffect="ripple"/>
</LinearLayout>
